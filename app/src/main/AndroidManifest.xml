<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.wargame">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/poker_logo_flag"
        android:label="@string/app_name"
        android:roundIcon="@drawable/poker_logo_flag"
        android:supportsRtl="true"
        android:theme="@style/Theme.WarGame"
        tools:targetApi="31">
        <activity
            android:name=".activities.TopTenActivity"
            android:exported="false" />
        <activity
            android:name=".activities.WinnerActivity"
            android:exported="false" />
        <activity
            android:name=".activities.GameActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>